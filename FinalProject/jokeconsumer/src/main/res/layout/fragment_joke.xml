<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF191970"
    tools:context="com.android.udacity.kavitha.jokeconsumer.JokeFragment">
<RelativeLayout
    android:layout_width="match_parent" android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/blankTextView" android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFAF0"
        android:text="@string/hello_blank_fragment" />
<!--
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blankTextView"
        android:onClick="tellJoke"
        android:text="Click here "

        />-->
    <TextView android:id="@+id/txtJokes"
        android:layout_below="@id/blankTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFAF0"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Sample joke"
        android:textSize="24sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/txtJokes"
        android:padding="@dimen/activity_horizontal_margin"
        android:adjustViewBounds="true"
        android:contentDescription="@string/gradle_logo"
        android:scaleType="centerCrop"
        android:src="@drawable/jokes" />
</RelativeLayout>
</FrameLayout>
